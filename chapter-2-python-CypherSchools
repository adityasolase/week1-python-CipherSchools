#***********************************strip in python**************************************

name="      Bhairav       "
title="Kumar"
print(name+title)
print(name.replace(" ","")+title)
print(name.lstrip()+title)
print(name.rstrip()+title)
print(name.strip()+title)

str1="Baby m a bad boy will you be my bad girl"
print(str.replace(" ","_"))

str2="i am good and i am bad as well"
print(str2.find("am",3))

#****************************center method in python************************************

name=input("enter your name= ")
print(name.center(len(name)+8,"*"))
